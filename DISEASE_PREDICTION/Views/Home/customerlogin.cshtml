	@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Raw(ViewBag.msg)


<section id="inner-headline">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="pageTitle">Contact Us</h2>
			</div>
		</div>
	</div>
</section>
<section id="content">

	<div class="container">
		<div class="row">
			<div class="col-md-12">
			
			</div>
		</div>
		<div class="row">
		
				
				<div class="contact-form col-lg-6">
					<h3>Account Login</h3>
					<form method="post" action="/home/customerlogin" id="contactform" class="contact">
						
						<div class="form-group has-feedback">
							<label for="email">Email*</label>
							<input type="email" class="form-control" name="email" placeholder="">
							<i class="fa fa-envelope form-control-feedback"></i>
						</div>

						<div class="form-group has-feedback">
							<label for="message">Password*</label>
							<input type="password" class="form-control" name="comment" placeholder="password">
							<i class="fa fa-lock form-control-feedback"></i>
						</div>
						<input type="submit" value="Login" id="submit" class="submit btn btn-default">
					</form>


				</div>
			</div>
        <div class="contact-form col-lg-6">
            <h3>Register New Account </h3>
            <form method="post" action="/home/customerlogin" id="contactform" class="contact">
                <div class="form-group has-feedback">
                    <label for="name">Name*</label>
                    <input type="text" class="form-control" name=" PATIENT_NAME " placeholder="Enter Name">
                    <i class="fa fa-user form-control-feedback"></i>
                </div> <div class="form-group has-feedback">
                    <label for="name">Phone No*</label>
                    <input type="text" class="form-control" name="PATIENT_PhoneNo" placeholder="Phone No">
                    <i class="fa fa-user form-control-feedback"></i>
                </div>
                 <div class="form-group has-feedback">
                    <label for="email">Email*</label>
                    <input type="email" class="form-control" name="PATIENT_Email" placeholder="Email Address">
                    <i class="fa fa-envelope form-control-feedback"></i>
                </div> <div class="form-group has-feedback">
                    <label for="email">Password*</label>
                    <input type="password" class="form-control" name=" Patient_EmailPassword" placeholder="Email password">
                    <i class="fa fa-lock form-control-feedback"></i>
                </div>


                <div class="form-group has-feedback">
                    <label for="message">Address*</label>
                    <textarea class="form-control" rows="6" name="PATIENT_LOCATION" placeholder="Address"></textarea>
                    <i class="fa fa-pencil form-control-feedback"></i>
                </div>
                <input type="submit" value="Register" id="submit" class="submit btn btn-default">
            </form>


        </div>
		</div>
    

</section>
