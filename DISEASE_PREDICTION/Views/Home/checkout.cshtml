
@using DISEASE_PREDICTION.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TBL_MEDICINE> list = new List<TBL_MEDICINE>();
    if (Session["cart"] != null)
    {
        list = (List<TBL_MEDICINE>)Session["cart"];
    }
    int indexno = -1;
    int total = 0;
    Model1 db = new Model1();
}



<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="pageTitle">CheckOut</h2>
            </div>
        </div>
    </div>
</section>
<section id="content">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
              
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                
                <div class="contact-form">
                    <h3>Billing Address</h3>
                    <form method="post" action="https://webthemez.com/demo/touch-hospital-medical-bootstrap-html5-template/contact.php" id="contactform" class="contact">
                        <div class="form-group has-feedback">
                            <label for="name">Name*</label>
                            <input type="text" class="form-control" name="name" placeholder="">
                            <i class="fa fa-user form-control-feedback"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="email">Email*</label>
                            <input type="email" class="form-control" name="email" placeholder="">
                            <i class="fa fa-envelope form-control-feedback"></i>
                        </div>

                        <div class="form-group has-feedback">
                            <label for="message">Address*</label>
                            <textarea class="form-control" rows="6" name="comment" placeholder=""></textarea>
                            <i class="fa fa-pencil form-control-feedback"></i>
                        </div>
                        <input type="submit" value="Submit" id="submit" class="submit btn btn-default">
                    </form>


                </div>
            </div>

        </div>
    </div>
</section>
    <h3>Shopping Cart</h3>
    @foreach (var item in list)
    {
        indexno++;
        total += item.MED_SALE_PRICE * item.Quantity;
        <div class="media mb-2 border-bottom">
            <div class="media-body">
                <a hrtef="#">@item.MED_NAME</a>
                <div class="small text-muted">Price:@item.MED_SALE_PRICE<span class="mx-2">Quantinty:@item.Quantity</span>
                <span class="mx-2">Subtotal:@(item.MED_SALE_PRICE * item.Quantity)</span>
                </div>
            </div>
        </div>
    }
    <h3>Order Summary</h3>
    <div class="d-flex"></div>
    <h4>Sub Total</h4>
    <div class="ml-auto font-weight-bold">Rs:@total</div>
    <div class="d-flex"></div>
    <h4>Shipping Cost</h4>
    <div class="ml-auto font-weight-bold">Rs:250</div>
    <div class="d-flex"></div>
    <h4>Grand Total</h4>
    <div class="ml-auto font-weight-bold">Rs:@(total+250)</div><br />
    <h4>Payment Method</h4>
    <input type="radio"name="payment" >CashOnDelivery <br />
            <input type="radio"name="payment" >PayPal<br>

    <button class="btn btn-success" >Place Order</button>

