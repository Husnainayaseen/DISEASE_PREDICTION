@using DISEASE_PREDICTION.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "orderbooked";
    List<TBL_MEDICINE> list = new List<TBL_MEDICINE>();
    if (TempData["order"] != null)
    {
        list = (List<TBL_MEDICINE>)TempData.Peek("order");
    }
    int indexno = -1;
    int total = 0;
    Model1 db = new Model1();
}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle">OrderBooked</h2>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <!-- end divider -->
        <div class="row">
            <div class="col-md-12">
                <div>
                    <center><h3>CART/SHOP</h3></center>

                </div>
            </div>
        </div>
        <table style="width: 100%;height:100px; column-span:all; border:none; font-size: 20px;  padding:10px;margin:10px;height:70px;margin-left:auto;margin-right:auto">
            <tr style=" background-color: darkslategrey; color: white;">
                <th>Image</th>
                <th>Med Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Remove</th>
            </tr>

            @foreach (var item in list)
            {
                indexno++;
                total += item.MED_SALE_PRICE * item.Quantity;
                <tbody>
                    <tr>

                        <td><a href="#"> <img style="width:100px;height:100px;" src="@Url.Content(item.MED_IMAGE)" /></a></td>
                        <td><a href="#">@item.MED_NAME</a></td>
                        <td>Rs:@item.MED_SALE_PRICE</td>-->
                        <td>

                            
                            <span style="margin:5px;font-size:22px;font-weight:bold">
                                @item.Quantity
                            </span>
                           

                        </td>
                        <td>@(item.MED_SALE_PRICE*item.Quantity)</td>
                        <td>
                            
                        </td>
                    </tr>
                </tbody>

            }

        </table><br /><br />
        <div class="col-lg-6 col-sm-6"></div>
        <a href="@Url.Action("services","Home")" class="btn btn-medium align-left icon-bolt"> Update Cart</a>
    </div>
    <div class="row my-5"></div>
    <div class="col-lg-8 col-sm-12"></div>
    <div class="col-lg-4 col-sm-12"></div>
    <h3>Order Summary</h3>
    <div class="d-flex"></div>
    <h4>Sub Total</h4>
    <div class="ml-auto font-weight-bold">Rs:@total</div>
    <div class="d-flex"></div>
    <h4>Shipping Cost</h4>
    <div class="ml-auto font-weight-bold">Rs:250</div>
    <div class="d-flex"></div>
    <h4>Grand Total</h4>
    <div class="ml-auto font-weight-bold">Rs:@(total+250)</div>

 

</section>


