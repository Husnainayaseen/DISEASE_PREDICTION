    @*<td>
            @medicine.MED_MANUFACTURE_DATE
        </td>
        <td>
            @medicine.MED_EXPIRY_DATE
        </td>*@

    @*<td>
            @medicine.MED_USAGE
        </td>*@
    <td>
        @medicine.MED_PURCHASE_PRICE
    </td>
    @*<td>
            @medicine.MEDICINE_REACTION
        </td>*@


