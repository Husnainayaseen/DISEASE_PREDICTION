        <a class="btn btn-success  fa fa-edit " href="@Url.Action("Edit","TBL_MEDICINE",new{ id=medicine.MED_ID})"></a>
        <a class="btn btn-grey fa fa-book" href="@Url.Action("Details","TBL_MEDICINE",new{ id=medicine.MED_ID})"></a>
        <a class="btn btn-danger fa fa-trash" href="@Url.Action("Delete","TBL_MEDICINE",new{ id=medicine.MED_ID})"></a>



        @*@Html.ActionLink("Edit", "Edit", new { id = medicine.MED_ID }) |
            @Html.ActionLink("Details", "Details", new { id = medicine.MED_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = medicine.MED_ID })*@
    </td>
</tr>
